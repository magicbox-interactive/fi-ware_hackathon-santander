<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
	<!-- Default -->
	<item android:drawable="@android:color/transparent" android:state_selected="false"></item>
	
	<!-- Focused states -->
	<item android:state_focused="true" android:drawable="@drawable/foc_widget" />	
	
	<!-- Selected -->
	<item android:state_selected="true" android:drawable="@drawable/foc_widget" />
	
	<!-- Pressed -->
	<item android:state_pressed="true" android:drawable="@drawable/foc_widget" />

</selector>